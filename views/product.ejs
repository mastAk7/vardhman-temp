<script>
const lines = document.querySelectorAll('.text-line');
const pauseBtn = document.getElementById('pauseBtn');
const playBtn = document.getElementById('playBtn');

let currentIndex = 0;
let timer = null;
let remaining = 5000;
let startTime = null;
let paused = false;

function clearAllAnimations() {
  lines.forEach((line) => {
    line.classList.remove('active');
    const progress = line.querySelector('.progress');
    progress.classList.remove('animate');
    progress.style.transition = 'none';
    progress.style.transform = 'scaleY(0)';
  });
}

function animateLine(index) {
  clearAllAnimations();

  const line = lines[index];
  line.classList.add('active');
  const progress = line.querySelector('.progress');
  progress.classList.add('animate');
  progress.style.transition = 'none';
  progress.style.transform = 'scaleY(0)';

  // Force reflow before applying transition
  void progress.offsetHeight;

  progress.style.transition = `transform ${remaining / 1000}s linear`;
  progress.style.transform = 'scaleY(1)';

  startTime = Date.now();

  timer = setTimeout(() => {
    if (!paused) {
      currentIndex++;
      if (currentIndex >= lines.length) {
        currentIndex = 0; // Restart
      }
      remaining = 5000;
      animateLine(currentIndex);
    }
  }, remaining);
}

// Pause
pauseBtn.onclick = () => {
  if (paused) return;
  paused = true;
  clearTimeout(timer);
  const elapsed = Date.now() - startTime;
  remaining = Math.max(0, remaining - elapsed);

  // Freeze progress animation
  const currentLine = lines[currentIndex];
  const progress = currentLine.querySelector('.progress');
  const computed = window.getComputedStyle(progress);
  const matrix = new WebKitCSSMatrix(computed.transform);
  const scaleY = matrix.m22;
  progress.style.transition = 'none';
  progress.style.transform = `scaleY(${scaleY})`;

  pauseBtn.style.display = 'none';
  playBtn.style.display = 'inline-block';
};

// Play
playBtn.onclick = () => {
  if (!paused) return;
  paused = false;
  pauseBtn.style.display = 'inline-block';
  playBtn.style.display = 'none';
  animateLine(currentIndex);
};

// Start animation
animateLine(currentIndex);
</script>

