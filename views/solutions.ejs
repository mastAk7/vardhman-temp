<script>
  $(document).ready(function () {
    function initSlider(selector) {
      $(selector).slick({
        slidesToShow: 2,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 1500,
        arrows: false,
        responsive: [
          { breakpoint: 1024, settings: { slidesToShow: 2 } },
          { breakpoint: 768, settings: { slidesToShow: 1 } }
        ]
      });
    }

    initSlider('.training-slider');
    initSlider('.engagement-slider');
    initSlider('.workshop-slider');

    $('.prev-training').click(() => $('.training-slider').slick('slickPrev'));
    $('.next-training').click(() => $('.training-slider').slick('slickNext'));

    $('.prev-engagement').click(() => $('.engagement-slider').slick('slickPrev'));
    $('.next-engagement').click(() => $('.engagement-slider').slick('slickNext'));

    $('.prev-workshop').click(() => $('.workshop-slider').slick('slickPrev'));
    $('.next-workshop').click(() => $('.workshop-slider').slick('slickNext'));
  });
</script>

