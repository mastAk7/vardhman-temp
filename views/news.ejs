        }

        /* Hide broken profile images */
        .sk-linkedin-post-avatar img[src=""],
        .sk-linkedin-post-avatar img:not([src]),
        .sk-wm-post-avatar img[src=""],
        .sk-wm-post-avatar img:not([src]),
        div[class*="avatar"] img[src=""],
        div[class*="avatar"] img:not([src]) {
