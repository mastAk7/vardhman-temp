        .sk-linkedin-post-image img,
        .sk-wm-post-image img,
        div[class*="image"] img {
            width: 100% !important;
            height: auto !important;
            display: block !important;
        }

        /* Broken post images */
        .sk-linkedin-post-image img[src=""],
        .sk-linkedin-post-image img:not([src]),
        .sk-wm-post-image img[src=""],
        .sk-wm-post-image img:not([src]),
